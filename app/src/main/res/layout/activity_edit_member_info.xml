<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        style="@style/IDSTYLE_TEXTVIEW_BASE_ITEM_TITLE"
        android:text="연락처 수정"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView android:id="@+id/cancel_button"
            style="@style/IDSTYLE_IMAGEVIEW_BASE_PUSH_ICON"
            android:layout_weight="1"
            />

        <ImageView android:id="@+id/ok_button"
            style="@style/IDSTYLE_IMAGEVIEW_BASE_PUSH_ICON"
            android:layout_weight="1"
           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <ImageView android:id="@+id/member_image"
            style="@style/IDSTYLE_IMAGEVIEW_BASE_SHOWABLE_ICON"
             />

        <EditText
            android:id="@+id/member_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="홍길동"
            android:textSize="20dp" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="전화번호"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="010-0000-0000"
        android:inputType="phone"
        android:textSize="20dp" />
</LinearLayout>