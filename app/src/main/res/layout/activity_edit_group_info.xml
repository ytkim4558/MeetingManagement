<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:baselineAligned="true">

    <ImageView android:id="@+id/group_image"
        style="@style/IDSTYLE_IMAGEVIEW_BASE_SHOWABLE_BIG_ICON" />

    <EditText android:id="@+id/group_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="그룹 이름" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <ImageView android:id="@+id/cancel_button"
            style="@style/IDSTYLE_IMAGEVIEW_BASE_PUSH_ICON"
            android:src="@drawable/back"/>

        <ImageView android:id="@+id/ok_button"
            style="@style/IDSTYLE_IMAGEVIEW_BASE_PUSH_ICON"
            android:src="@drawable/save"/>
    </LinearLayout>
</LinearLayout>