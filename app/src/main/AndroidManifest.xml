<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nagnek.android.meetingmanagement">

    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.nagnek.android.meetingmanagement.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.nagnek.android.meetingmanagement.GroupActivity"
            android:configChanges="orientation|screenSize" />
        <activity
            android:name="com.nagnek.android.meetingmanagement.NewGroupPopupActivity"
            android:theme="@android:style/Theme.Dialog" />
    </application>

</manifest>